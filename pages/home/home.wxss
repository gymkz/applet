/* tab */
.h-container {
  flex: 1;
  padding: 0 16rpx;
  display: flex;
  flex-direction: column;
  background-color: white;
}
.tab-box {
  display: flex;
  margin: 0 6rpx;
}
.tab-view {
  flex: 1;
  color: #232323;
  font-size: 34rpx;
  font-weight: bold;
  /* text-align: center; */
  line-height: 96rpx;
}
.tab-view2 {
  flex: 1;
  color: #333333;
  font-size: 32rpx;
  line-height: 96rpx;
}
.tab-hover {}
.img-hover {
  /* position: relative; */
  opacity: 0.87;
  transform: scale(0.97, 0.97);
  background-color: #F3F3F3;
}
/* 话题 */
.scroll-box {
  width: 100%;
  height: 168rpx;
  display: flex;
  margin: 0 6rpx;
  margin-bottom: 22rpx;
}
.huati-box {
  display: flex;
  margin-right: 8rpx;
}
.huati-img {
  width: 168rpx;
  height: 168rpx;
  border-radius: 6rpx;
}
.huati-mark {
  position: absolute;
  color: white;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 168rpx;
  height: 168rpx;
  border-radius: 6rpx;
  background-color: rgba(0, 0, 0, 0.2);
}
/* 列表 */
.item-box {
  width: 50%;
}
.item-layout {
  overflow: hidden;
  position: relative;
  margin: 6rpx;
  height: 487rpx;
}
.item-collect {
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  position: absolute;
  padding: 24rpx;
  font-size: 32rpx;
  color: white;
  background-color: rgba(0, 0, 0, 0.2);
}