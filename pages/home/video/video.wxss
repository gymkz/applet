/* pages/home/video/video.wxss */

.video-box {
  z-index: 1;
  width: 100%;
  height: 100%;
  color: white;
  position: absolute;
  display: flex;
  align-items: flex-end;
}

.info-layout {
  flex: 1;
  margin: 0 0 80rpx 28rpx;
  display: flex;
  flex-direction: column;
}

.user-icon {
  width: 96rpx;
  height: 96rpx;
  margin-bottom: 32rpx;
  border-radius: 48rpx;
  background-color: violet;
}

.video-desc {
  /* overflow: visible; */
  word-wrap: break-word;
  word-break: normal;
  text-overflow: ellipsis;
  /* white-space: nowrap; */
}

.box-layout {
  margin: 0 28rpx 80rpx 0;
  display: flex;
  flex-direction: column;
}

.box-view {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 32rpx;
  margin-left: 32rpx;
}

.box-icon {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 18rpx;
  background-color: tomato;
}

.box-text {
  font-size: 32rpx;
  font-weight: bold;
}

.back-box {
  top: 78rpx;
  left: 32rpx;
  z-index: 999;
  width: 64rpx;
  height: 64rpx;
  position: absolute;
  border-radius: 32rpx;
  background-color: rgba(255, 255, 255, 0.3);
  /* background-color: white; */
}

.back-icon {
  width: 46rpx;
  height: 46rpx;
}